---
import SocialButton from '../SocialButton.astro'
import { constants } from '../../constants'
import background from '../../assets/images/background.jpg'
import { Image } from 'astro:assets';
---

<main class="bg-black">
    <Image src={background} alt="" class="w-screen h-screen object-cover opacity-50" aria-hidden/>
    <section class="absolute w-screen h-screen top-0 flex flex-col justify-center items-center text-zinc-200 gap-2">
        <h1 class="text-4xl">{constants.fullname}</h1>
        <h2>{constants.job.title} <a class="hover:text-zinc-400" href={constants.job.employerUrl}>@{constants.job.employer}</a></h2>
        <section class="flex flex-row gap-2" aria-label="Group of links to external platforms">
            {
                constants.socials.map((platform) => (
                    <SocialButton
                        platform={platform.title}
                        url={platform.url}
                    />
                ))
            }
        </section>
    </section>
</main>
